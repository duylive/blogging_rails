<h1>Profile</h1>
<!--Sử dụng empty? hoặc blank?-->
<% if @user.name.empty? %>
  <p>No name</p>
  <% else %>
  <p>Name: <%= @user.name %></p>
<% end %>
<% if @user.email.empty? %>
  <p>No email</p>
  <% else %>
  <p>Email: <%= @user.email %></p>
<% end %>

<h2>Posts</h2>
<ul>
  <!--  Sử dụng any? hoặc exists?-->
  <% if @user.posts.any? %>
    <% @user.posts.each do |post| %>
      <li><%= post.title %></li>
    <% end %>
  <% else %>
    <li>No post !!!</li>
  <% end %>
</ul>

<h2>Comments</h2>
<ul>
  <!--  Sử dụng any? hoặc exists?-->
  <% if @user.comments.any? %>
    <% @user.comments.each do |comment| %>
      <li><%= comment.content %></li>
    <% end %>
  <% else %>
    <li>No comment !!!</li>
  <% end %>
</ul>
